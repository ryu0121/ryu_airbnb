<div class="container mt-4">
    <div class="row">
        <div class="col-md-3">
            <div class="card" style="width: 14rem;">
                <%= image_tag avatar_url(@user), class: "avatar-show" %>
                <div class="card-header">
                    Verification
                </div>
                <div class="card-body">
                    <% if @user.image %>
                        <p class="card-text">Facebook: <i class="fas fa-check-circle"></i></p>
                    <% else %>
                        <p class="card-text">Email: <i class="fas fa-check-circle"></i></p>
                    <% end %>
                    <% if @user.phone_number %>
                        <p class="card-text"><%= @user.phone_number %> <i class="fas fa-check-circle"></i></p>
                    <% end %>
                </div>
            </div>
        </div>
        <div class="col-9">
            <h3><%= @user.fullname %></h3>
            <h4>Listings (<%= @rooms.length %>)</h4><br>
            <div class="row">
                <%= render 'rooms/room_list' %>
            </div><br><br>

            <h4>Reviews From Guests ( <%= @guest_reviews.count %> )</h4>
            <div>
                <%= render "reviews/guest_list" %>
            </div>


            <h4>Reviews From Hosts ( <%= @host_reviews.count %> )</h4>
            <div>
                <%= render "reviews/host_list" %>
            </div>
        </div>
    </div>
</div>