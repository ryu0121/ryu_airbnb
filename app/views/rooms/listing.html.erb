<div class="row">
    <div class="col-3">
        <div class="card">
            <div class="card-body">
                <%= render "room_menu" %>
            </div>
        </div>
    </div>


    <div class="col-9">
        <div class="card">
            <div class="card-header bg-success text-white">
                Listing
            </div>
            <div class="card-body">
                <div class="container">
                    <%= form_for @room do |f| %>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label> Home Type </label>
                                    <div class="listing-form-group">
                                        <%= f.select :home_type, [["Apartment", "Apartment"], ["House", "House"],
                                        ["Bed & Breakfast", "Bed & Breakfast"]], id: "home_type", prompt: "Select..", class: "form-control" %>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label> Room Type </label>
                                    <div class="listing-form-group">
                                        <%= f.select :room_type, [["Entire", "Entire"], ["Private", "Private"],
                                        ["Shared", "Shared"]], id: "room_type", prompt: "Select..", class: "form-control" %>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label> Accommodate </label>
                                    <div class="listing-form-group">
                                        <%= f.select :accommodate, [["1", 1], ["2", 2],
                                        ["3", 3], ["4+", 4]], id: "accommodate", prompt: "Select..", class: "form-control" %>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label> Bedrooms </label>
                                    <div class="listing-form-group">
                                        <%= f.select :bedroom, [["1", 1], ["2", 2],
                                        ["3", 3], ["4+", 4]], id: "bedroom", prompt: "Select..", class: "form-control" %>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label> Bathrooms </label>
                                    <div class="listing-form-group">
                                        <%= f.select :bathroom, [["1", 1], ["2", 2],
                                        ["3", 3], ["4+", 4]], id: "bathroom", prompt: "Select..", class: "form-control" %>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div>
                            <%= f.submit "Save", class: "btn btn-primary save-room" %>
                        </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>